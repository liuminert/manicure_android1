<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>
    <style name="startTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="order_title_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_order_title_bg</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:textColor">@drawable/tab_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="main_tab_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tabTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@mipmap/bg_navi</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="tabShopTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>


    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="textsize0">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/TextGrayColor</item>
    </style>

    <style name="textsize2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_red</item>
    </style>
    <style name="textsize1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoadingProgressbar">
    <item name="android:indeterminateDrawable">@drawable/loading_progressbar</item>
    </style>

    <style name="MLTheme.PupopMenu" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#232323</item>
    </style>

    <style name="MLTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Toolbar字体颜色-->
        <item name="colorControlNormal">@color/ml_text_primary</item>
        <item name="android:textColor">@color/ml_text_primary</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/photo_checkb_select</item>
    </style>

    <style name="line_e3e9e9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e3e9e9</item>
    </style>
</resources>
