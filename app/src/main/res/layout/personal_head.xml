<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/tab_background"
        app:layout_heightPercent="45%w">


        <ImageView
            android:id="@+id/iv_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tab_background"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/post_pic_bg"
            app:layout_heightPercent="25%w"
            app:layout_marginTopPercent="5%h"
            app:layout_widthPercent="25%w" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:layout_centerHorizontal="true"
            android:text="个人交流"
            android:textColor="@color/tab_background"
            app:layout_marginTopPercent="5%h" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_centerHorizontal="true"
            android:text="交流心得 分享结果"
            android:textColor="@color/tab_background"
            android:textSize="12sp"
            app:layout_marginTopPercent="5%h" />


    </com.tesu.manicurehouse.support.PercentRelativeLayout>


    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:id="@+id/rl_elite_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="精华帖"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_black_right" />


    </com.tesu.manicurehouse.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LineGrayColor" />

    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:id="@+id/rl_list_of_popular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="人气榜"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_black_right" />


    </com.tesu.manicurehouse.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LineGrayColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/GrayBackground" />

</com.tesu.manicurehouse.support.PercentLinearLayout>
