<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:background="@drawable/border_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_heightPercent="60%w"
        android:layout_marginRight="5dp">
        <com.tesu.manicurehouse.support.PercentRelativeLayout
            android:id="@+id/rl_video_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="68%h">

            <ImageView
                android:background="@color/text_color_black"
                android:id="@+id/video_left"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:gravity="center_vertical"
                />
            
            <TextView
                android:id="@+id/tv_isfee_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TitleRed"
                android:layout_alignBottom="@+id/video_left"
                android:layout_alignRight="@+id/video_left"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:text="付费"/>
            <ImageView
                android:id="@+id/iv_is_free_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/free"
                android:layout_alignBottom="@+id/video_left"
                android:layout_alignRight="@+id/video_left"/>
            <ImageView
                android:id="@+id/iv_video_play_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/bt_video"/>
        </com.tesu.manicurehouse.support.PercentRelativeLayout>

        <com.tesu.manicurehouse.widget.CircleImageView
            app:layout_marginTopPercent="1%h"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/iv_vido"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="17%h"
            app:layout_heightPercent="17%h"
            android:src="@mipmap/myself_pic"
            android:scaleType="centerCrop"
            app:border_color="@color/TextGrayColor"
            app:border_width="0.5dp"
            android:layout_below="@id/rl_video_left"
            />
        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_title_left"
            app:layout_marginTopPercent="1%h"
            android:layout_below="@id/rl_video_left"
            android:layout_toRightOf="@id/iv_vido"
            android:layout_width="fill_parent"
            android:maxLines= "2"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_height="0dp"
            app:layout_heightPercent="17%h"
            />
        <TextView
            android:id="@+id/tv_play_count_left"
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%h"
            app:layout_widthPercent="50%w"
            android:layout_below="@id/tv_title_left"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/icon_browse_noselected"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            />
        <TextView
            android:id="@+id/tv_collection_count_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%h"
            app:layout_widthPercent="50%w"
            android:layout_below="@id/tv_title_left"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_collect_noselected"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            />
    </com.tesu.manicurehouse.support.PercentRelativeLayout>

    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:id="@+id/rl_rihgt"
        android:background="@drawable/border_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_heightPercent="60%w"
        android:layout_marginLeft="5dp">
    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:id="@+id/rl_video_right"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="68%h">
        <ImageView
            android:background="@color/text_color_black"
            android:id="@+id/video_right"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_isfee_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TitleRed"
            android:visibility="gone"
            android:layout_alignBottom="@+id/video_right"
            android:layout_alignRight="@+id/video_right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:text="付费"/>
        <ImageView
            android:id="@+id/iv_is_free_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free"
            android:layout_alignBottom="@+id/video_right"
            android:layout_alignRight="@+id/video_right"/>
        <ImageView
            android:id="@+id/iv_video_play_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/bt_video"/>
    </com.tesu.manicurehouse.support.PercentRelativeLayout>
        <com.tesu.manicurehouse.widget.CircleImageView
            app:layout_marginTopPercent="1%h"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/iv_vido_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="17%h"
            app:layout_heightPercent="17%h"
            android:src="@mipmap/myself_pic"
            android:scaleType="centerCrop"
            app:border_color="@color/TextGrayColor"
            app:border_width="0.5dp"
            android:layout_below="@id/rl_video_right"
            />
        <TextView
            android:textSize="12sp"
            app:layout_marginTopPercent="1%h"
            android:id="@+id/tv_title_right"
            android:gravity="center_vertical"
            android:layout_below="@id/rl_video_right"
            android:layout_toRightOf="@id/iv_vido_right"
            android:layout_width="fill_parent"
            android:maxLines= "2"
            android:ellipsize="end"
            android:layout_height="0dp"
            app:layout_heightPercent="17%h"
            />
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/tv_play_count_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%h"
            app:layout_widthPercent="50%w"
            android:layout_below="@id/tv_title_right"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/icon_browse_noselected"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            />
        <TextView
            android:id="@+id/tv_collection_count_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%h"
            app:layout_widthPercent="50%w"
            android:layout_below="@id/tv_title_right"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_collect_noselected"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            />
    </com.tesu.manicurehouse.support.PercentRelativeLayout>

</com.tesu.manicurehouse.support.PercentLinearLayout>