<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_notice_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_notificationmessage"
            android:id="@+id/iv_notice_information"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_notice_information"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知信息"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_down_notice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/icon_prompt" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LineGrayColor"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_notice_information"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新评论，赶快去看看。"
        android:textColor="@color/TextGrayColor"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LineGrayColor"
        />

</LinearLayout>