<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_secord_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#f2f3f7"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tesu.manicurehouse.widget.CircleImageView
                android:visibility="gone"
                android:id="@+id/iv_second_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:border_color="@color/TextGrayColor"
                app:border_width="0.5dp" />


            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_second_user_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_second_image"
                android:textColor="@color/text_color_black"
                android:textSize="14sp" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_second_user_name"
                android:text="回复"
                android:textColor="@color/text_color_black"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />
            <TextView
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_master"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_temp"
                android:textColor="@color/text_color_black"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_second_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_second_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_marginLeft="50dp"
            android:textColor="@color/text_color_gray" />


    </RelativeLayout>

    <View
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LineGrayColor"
        />
</LinearLayout>