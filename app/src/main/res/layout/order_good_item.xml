<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <TextView
            app:layout_marginTopPercent="5%h"
            android:id="@+id/tv_order_num"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            app:layout_widthPercent="60%w"
            app:layout_heightPercent="20%h"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_order_num"
            android:scaleType="fitXY"
            app:layout_heightPercent="65%h"
            app:layout_marginTopPercent="5%h"
            android:layout_marginLeft="10dp"
            app:layout_widthPercent="65%h" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_num"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_good"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginTopPercent="5%h"
            app:layout_widthPercent="30%w" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/pink_text"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_good_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_total_price"
            android:text="合计："
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h" />

        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_good"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/TextGrayColor"
            android:textSize="12sp"
            android:gravity="center_vertical|right"
            app:layout_widthPercent="40%w"
            app:layout_marginTopPercent="5%h"
            android:layout_marginRight="10dp"/>
        <Button
            android:background="@drawable/btn_order"
            android:id="@+id/btn_wait_pay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%w"
            app:layout_heightPercent="25%h"
            android:layout_below="@id/tv_order_time"
            android:layout_alignParentRight="true"
            android:text="待付款"
            android:textColor="@color/tab_background"
            android:textSize="14sp"
            app:layout_marginTopPercent="5%h"
            android:layout_marginRight="10dp" />
    </com.tesu.manicurehouse.support.PercentRelativeLayout>

</com.tesu.manicurehouse.support.PercentLinearLayout>