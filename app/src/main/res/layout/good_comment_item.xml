<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_good"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/tv_good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_good"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="商品名称"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
       />

    <EditText
        android:layout_below="@id/iv_good"
        android:layout_margin="10dp"
        android:background="@drawable/border_shape"
        android:gravity="left"
        android:hint="请对商品作出评论..."
        android:id="@+id/et_tips"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_add_image"
        android:layout_below="@id/et_tips"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/border_shape"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/iv_add_image"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
    </RelativeLayout>
    <GridView
        android:layout_marginRight="10dp"
        android:layout_below="@id/et_tips"
        android:layout_toRightOf="@id/ll_add_image"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:cacheColorHint="@android:color/transparent"
        android:clipChildren="true"
        android:gravity="center"
        android:horizontalSpacing="3dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:verticalSpacing="3dip"
        android:id="@+id/gv_image"
        >

    </GridView>
</RelativeLayout>