<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_secord_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:background="#f2f3f7"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <TextView
                android:gravity="bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tv_repay"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/iv_second_image"
                android:textColor="@color/defaultBlueColor"
                android:textSize="14sp" />
            <TextView
                android:gravity="bottom"
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/tv_repay"
                android:text="回复"
                android:textColor="@color/text_color_black"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />
            <TextView
                android:gravity="bottom"
                android:ellipsize="end"
                android:id="@+id/tv_master"
                android:singleLine="true"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/tv_temp"
                android:textColor="@color/defaultBlueColor"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textSize="13sp"
            android:layout_below="@id/rl"
            android:id="@+id/tv_second_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black" />
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_second_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_second_comment"
            android:textColor="@color/TextGrayColor" />
    </RelativeLayout>


</LinearLayout>