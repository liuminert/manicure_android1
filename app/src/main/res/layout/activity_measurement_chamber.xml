<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical"

    >

    <RelativeLayout style="@style/tabTitleStyle">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="测评室"
            android:textColor="@color/title_text"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/myselector"
            android:scaleType="center"
            android:src="@mipmap/top_back" />

        <ImageView
            android:id="@+id/iv_release"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/myselector"
            android:src="@mipmap/img_edit_post" />
    </RelativeLayout>



            <com.tesu.manicurehouse.support.PercentRelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_video"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/tab_background"
                app:layout_heightPercent="27%h">


                <ImageView
                    android:src="@mipmap/pic_communucation_bg"
                    android:id="@+id/iv_bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/post_pic_bg"
                    app:layout_heightPercent="25%w"
                    app:layout_marginTopPercent="5%h"
                    app:layout_widthPercent="25%w" />

                <TextView
                    android:textColor="@color/tab_background"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_image"
                    android:text="测评室"
                    app:layout_marginTopPercent="5%h" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_centerHorizontal="true"
                    android:text="交流心得 分享结果"
                    app:layout_marginTopPercent="5%h"
                    android:textSize="12sp"
                    android:textColor="@color/tab_background"
                    />


            </com.tesu.manicurehouse.support.PercentRelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/GrayBackground"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ListView
                    android:id="@+id/lv_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
                <ImageView
                    android:id="@+id/iv_goto_top"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_goto_top"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


</com.tesu.manicurehouse.support.PercentLinearLayout>