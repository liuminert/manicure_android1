<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.tesu.manicurehouse.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_order_num"
            android:scaleType="fitXY"
            app:layout_heightPercent="90%h"
            app:layout_marginTopPercent="5%h"
            app:layout_marginLeftPercent="10%h"
            app:layout_widthPercent="90%h" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_num"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_good"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品名称"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginTopPercent="5%h"
            app:layout_widthPercent="30%w" />

        <TextView
            android:id="@+id/tv_goods_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_good_color"
            android:text="￥100"
            android:textColor="@color/pink_text"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h"
            app:layout_marginRightPercent="10%h" />

        <TextView
            android:id="@+id/tv_good_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_good"
            android:text="合计："
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h" />

        <TextView
            app:layout_marginRightPercent="10%h"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="x1"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_marginBottomPercent="10%h" />
    </com.tesu.manicurehouse.support.PercentRelativeLayout>

</com.tesu.manicurehouse.support.PercentLinearLayout>