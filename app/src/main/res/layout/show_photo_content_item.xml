<?xml version="1.0" encoding="utf-8"?>
<com.tesu.manicurehouse.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tesu.manicurehouse.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/add_image_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_add_wireframe"
            android:src="@drawable/icon_add"/>
        <ImageView
            android:id="@+id/image_one_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:background="@drawable/bt_add_wireframe"
            android:src="@drawable/icon_add"/>
        <ImageView
            android:id="@+id/image_two_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:background="@drawable/bt_add_wireframe"
            android:src="@drawable/icon_add"/>
        <TextView
            android:id="@+id/show_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_gray"
            android:text="第一张图片为最终效果图，后面的图为步骤图。"/>
    </com.tesu.manicurehouse.support.PercentLinearLayout>
    <com.tesu.manicurehouse.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/content_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"
            android:background="@drawable/wireframe_describe"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="描述......"/>
        <ImageView
            android:id="@+id/add_total_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_add_wireframe"
            android:src="@drawable/icon_add"/>
    </com.tesu.manicurehouse.support.PercentLinearLayout>


</com.tesu.manicurehouse.support.PercentLinearLayout>